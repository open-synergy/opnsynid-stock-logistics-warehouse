<openerp>
    <data>
        <record id="stock_move_view_form" model="ir.ui.view">
            <field name="name">Stock Move Note Form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <button name="action_generate_account_entry" string="Generate Accounting Entry" type="object"/>
                </xpath>
            </field>
        </record>

        <record id="stock_move_action" model="ir.actions.act_window">
            <field name="name">Stock Move</field>
            <field name="res_model">stock.move</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
            <field name="context">{}</field>
            <field name="domain">[('state','=','done'),('product_id.valuation','=','real_time'),'|','&amp;',('location_id.usage','=','internal'),('location_dest_id.usage','!=','internal'),'&amp;',('location_id.usage','!=','internal'),('location_dest_id.usage','=','internal')]</field>
        </record>

        <record id="stock_move_tree_action" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock.view_move_tree"/>
            <field name="act_window_id" ref="stock_move_action"/>
        </record>

        <record id="stock_move_form_action" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_move_view_form"/>
            <field name="act_window_id" ref="stock_move_action"/>
        </record>

        <menuitem 
            id="stock_move_menu" 
            name="Stock Move" 
            parent="account.menu_finance_entries" 
            action="stock_move_action"
            sequence="100" />

    </data>
</openerp>

