<openerp>
    <data>
        <record id="stock_move_view_form" model="ir.ui.view">
            <field name="name">Stock Move Form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='moved_quants_grp']" position="after">
                    <group name="lot_info" string="Lot Inforrmation" colspan="4" col="2">
                        <field name="lot_info_ids" nolabel="1">
                            <tree>
                                <field name="lot_id"/>
                                <field name="quantity"/>
                                <field name="cost"/>
                            </tree>
                        </field>
                    </group>
                </xpath>

            </field>
        </record>

        <record id="stock_move_view_form_2" model="ir.ui.view">
            <field name="name">Stock Move Form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='moved_quants_grp']" position="after">
                    <group name="lot_info" string="Lot Inforrmation" colspan="4" col="2">
                        <field name="lot_info_ids" nolabel="1">
                            <tree>
                                <field name="lot_id"/>
                                <field name="quantity"/>
                                <field name="cost"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
