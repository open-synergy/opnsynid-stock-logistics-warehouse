<openerp>
<data>

  <record id="stock_picking_subtype_view_form" model="ir.ui.view">
      <field name="name">stock.picking_subtype form</field>
      <field name="model">stock.picking_subtype</field>
      <field name="inherit_id" ref="stock_operation_subtype.stock_picking_subtype_view_form"/>
      <field name="arch" type="xml">
          <xpath expr="//page[@name='note']" position="before">
              <page name="picking_policy" string="Stock Picking Policy">
                  <group name="picking_policy_1" colspan="4" col="2" string="Visibility">
                      <field name="show_partner_on_picking_form" string="Partner"/>
                      <field name="show_min_date_on_picking_form" string="Scheduled Date"/>
                      <field name="show_max_date_on_picking_form" string="Max. Expected Date"/>
                      <field name="show_date_done_on_picking_form" string="Date Done"/>
                  </group>
              </page>
              <page name="move_policy" string="Stock Move Policy">
                  <group name="move_policy_1" colspan="4" col="2" string="Visibility">
                      <field name="show_location_on_move_form" string="Source Location"/>
                      <field name="show_location_dest_on_move_form" string="Destination Location"/>
                      <field name="show_procure_method_on_move_form" string="Procure Method"/>
                      <field name="show_price_unit_on_move_form" string="Price Unit"/>
                  </group>
              </page>
          </xpath>
      </field>
  </record>

</data>
</openerp>
