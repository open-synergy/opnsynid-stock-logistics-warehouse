<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="stock_inventory_form_view" model="ir.ui.view">
    <field name="name">stock.inventory.form</field>
    <field name="model">stock.inventory</field>
    <field name="inherit_id" ref="stock.view_inventory_form"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//button[@name='action_done']" position="before">
                <button name="action_recompute_theoretical" string="Recompute Theoretical" type="object" states="confirm" groups="stock.group_stock_manager"/>
            </xpath>
            <xpath expr="//field[@name='filter']" position="before">
                <field name="qty_diff_method"/>
            </xpath>
            <xpath expr="//tree/field[@name='theoretical_qty']" position="before">
                <field name="initial_theoretical_qty"/>
                <field name="qty_diff_in"/>
                <field name="qty_diff_out"/>
                <field name="qty_recompute"/>
            </xpath>
            <xpath expr="//tree/field[@name='theoretical_qty']" position="after">
                <field name="manual_qty"/>
                <field name="qty_diff_method"/>
                <field name="diff_product_qty" invisible="1"/>
            </xpath>
            <xpath expr="//tree/field[@name='theoretical_qty']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </data>
    </field>
</record>

</odoo>
